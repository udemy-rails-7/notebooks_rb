<%=form_with model: @note, local: true do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :content %>
    <%# Action Text %>
    <%= form.rich_text_area :content %>
    
  </div>
  <div>
    <%= form.hidden_field :user_id, value: current_user.id %>
    </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<%= link_to 'Back', notes_path %>
